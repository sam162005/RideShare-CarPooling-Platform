}

.view-bookings-btn:hover {
  background: linear-gradient(90deg, #2a5498 0%, #15304f 100%);
  box-shadow: 0 8px 20px rgba(53, 99, 169, 0.4);
  transform: translateY(-3px);
}

.view-bookings-btn:active {
  transform: translateY(1px);
  box-shadow: 0 4px 10px rgba(53, 99, 169, 0.4);
}

.view-bookings-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, transparent, rgba(255, 255, 255, 0.2), transparent);
  transform: translateX(-100%);
  transition: transform 0.6s ease;
  z-index: -1;
}

.view-bookings-btn:hover::after {
  transform: translateX(100%);
}

.view-bookings-btn:hover {
  background-color: #2c4870;
}

/* Confetti animation for booking success */
.confetti-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  pointer-events: none;
  z-index: 0;
}

.confetti {
  position: absolute;
  width: 10px;
  height: 10px;
  background-color: #3563a9;
  opacity: 0.7;
  animation: confetti-fall 5s ease-in-out infinite, confetti-shake 3s ease-in-out infinite;
  z-index: 1;
}

.confetti:nth-child(2n) {
  background-color: #4caf50;
  width: 12px;
  height: 12px;
  animation-delay: 0.2s;
  animation-duration: 6s;
}

.confetti:nth-child(3n) {
  background-color: #f44336;
  width: 8px;
  height: 8px;
  animation-delay: 0.4s;
  animation-duration: 4.5s;
}

.confetti:nth-child(4n) {
  background-color: #ffeb3b;
  width: 14px;
  height: 14px;
  animation-delay: 0.6s;
  animation-duration: 7s;
}

.confetti:nth-child(5n) {
  background-color: #ff9800;
  width: 10px;
  height: 10px;
  animation-delay: 0.8s;
  animation-duration: 5.5s;
}

.confetti:nth-child(1) { top: 10%; left: 10%; }
.confetti:nth-child(2) { top: 20%; left: 30%; }
.confetti:nth-child(3) { top: 30%; left: 15%; }
.confetti:nth-child(4) { top: 40%; left: 70%; }
.confetti:nth-child(5) { top: 50%; left: 40%; }
.confetti:nth-child(6) { top: 60%; left: 80%; }
.confetti:nth-child(7) { top: 70%; left: 20%; }
.confetti:nth-child(8) { top: 80%; left: 65%; }
.confetti:nth-child(9) { top: 90%; left: 50%; }
.confetti:nth-child(10) { top: 25%; left: 90%; }

@keyframes confetti-fall {
  0% {
    transform: translateY(-100px) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translateY(600px) rotate(90deg);
    opacity: 0;
  }
}

@keyframes confetti-shake {
  0%, 100% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(20px);
  }
}

/* Loading container */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 1.2rem;
  color: #4a6fa1;
}

/* Animation classes */
.fade-in-up {
  animation: fadeInUp 0.5s ease forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
